<?xml version="1.0" encoding="utf-8"?>
<com.wuwind.form.FormLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/formLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/TextNormal_Black"
                android:text="账号" />

            <EditText
                android:id="@+id/mPhoneEt"
                style="@style/EditText_Black"
                android:hint="手机号"
                android:maxLength="15"
                android:tag="phone" />

        </LinearLayout>

        <View
            style="@style/LineThinMatchStyle"
            android:layout_below="@+id/titleTv"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/TextNormal_Black"
                android:text="姓名" />

            <EditText
                style="@style/EditText_Black"
                android:hint="姓名"
                android:maxLength="5"
                android:tag="name" />

        </LinearLayout>

        <View
            style="@style/LineThinMatchStyle"
            android:layout_below="@+id/titleTv"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/TextNormal_Black"
                android:text="密码" />

            <EditText
                style="@style/EditText_Black"
                android:hint="密码"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="25"
                android:tag="pass" />

        </LinearLayout>

        <View
            style="@style/LineThinMatchStyle"
            android:layout_below="@+id/titleTv"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/TextNormal_Black"
                android:text="密码确认" />

            <EditText
                style="@style/EditText_Black"
                android:hint="密码确认"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="25" />

        </LinearLayout>

        <View
            style="@style/LineThinMatchStyle"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/register"
                style="@style/ButtonStyle"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="注册" />

            <TextView
                android:id="@+id/reset"
                style="@style/ButtonStyle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="重置" />
        </LinearLayout>
    </LinearLayout>
</com.wuwind.form.FormLayout>
